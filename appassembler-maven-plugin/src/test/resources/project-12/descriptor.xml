<daemon>
  <mainClass>com.westerngeco.example.App</mainClass>
  <configurationDirectory>conf</configurationDirectory>
  <jvmSettings>
    <initialMemorySize>345</initialMemorySize>
    <maxMemorySize>234</maxMemorySize>
    <maxStackSize>321</maxStackSize>
  </jvmSettings>
  <generatorConfigurations>
    <generatorConfiguration>
      <generator>jsw</generator>
      <configuration>
        <chkconfig.run>3</chkconfig.run>
      	<chkconfig.start>21</chkconfig.start>
      	<chkconfig.stop>81</chkconfig.stop>
      </configuration>
    </generatorConfiguration>
  </generatorConfigurations>
  <repositoryName>lib</repositoryName>
</daemon>
